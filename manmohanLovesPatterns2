#include<iostream>
using namespace std;
int main()
{
    int i,j,n;
    cin>>n;
    for(i=1;i<=n;i++){

        for(j=1;j<=n;j++)
            if(j<=i)
                {
                    if(i==1 && j==1)
                        cout<<"1";
                    else if(j==1 || j==i)
                        cout<<i-1;

                    else
                        cout<<"0";
                }
            else
                    cout<<" ";


    cout<<endl;
    }
}
