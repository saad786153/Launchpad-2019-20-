#include<iostream>
using namespace std;
int main()
{
    int i,j,n;
   // cout<<"enter";
    cin>>n;
    for(i=1;i<=n;i++){

        for(j=1;j<=2*n-1;j++)

            if(i==1 || i==n)
            {
                 if(j>=n+1-i && j<=2*n-i)
                {
                    cout<<"*";
                }
                else
                    cout<<" ";

            }
            else
            {
                if(j==n+1-i || j==2*n-i)
                {
                    cout<<"*";
                }
                else
                    cout<<" ";
            }


    cout<<endl;
    }
}
