#include<iostream>
using namespace std;
int main()
{
    int i,j,k,x,n;
    cin>>n;
    for(i=1;i<=2*n+1;i++){
        i<=n+1 ? (k=0) : (k+=2);
        for(j=1;j<=2*n+1;j++)
        {
             j<=n+1 ? (x=0) : (x+=2);
             if(j<=i-k || j>=2*n+2-i+k)
                {
                    cout<<n+1-j+x<<" ";
                }
            else
                    cout<<"  ";
        }


    cout<<endl;
    }
}
