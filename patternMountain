#include<iostream>
using namespace std;
int main()
{
    int n,i,j,k;
    cin>>n;
    for(i=1;i<=n;i++){
       k=0;



        for(j=1;j<=2*n-1;j++)
        {
            j<=n ? k++ : k--;
           if(j<=i || j>=2*n-i)
                {

                    cout<<k<<"    ";

                }
            else
                cout<<"     ";
        }


    cout<<endl;
    }
}
