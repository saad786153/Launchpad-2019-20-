#include<iostream>
using namespace std;
int main()
{
    int i,j,n;
    cout<<"enter:";
    cin>>n;
    for(i=1;i<=n;i++){

        for(j=1;j<=n;j++)
            if(j<=i)
                {
                    if(j==1 || j==i)
                        cout<<i<<"   ";
                    else
                        cout<<"0    ";
                }
            else
                    cout<<" ";


    cout<<endl;
    }
}
